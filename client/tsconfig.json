{
  "compilerOptions": {
    "downlevelIteration": true,
    "baseUrl": "src",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "destination",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-jsx",
    "lib": ["ES2015", "ES2017", "ESNext", "DOM", "ES5", "ES2018", "WebWorker"],
    "types": ["node", "jest", "express"],
    "typeRoots": ["node_modules/@types", "./types/main.d.ts"],
    "paths": {
      "@src/*": ["./*"],
      "@components/*": ["./components/*"],
      "@svg/*": ["./svg/*"],
      "@public/*": ["./public/*"],
      "@media/*": ["./media/*"],
      "@client_types/*": ["../types/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["webpack/**/*", "src/**/*", "types/**/*"]
}
